{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "node16",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "@types/*.d.ts", "prisma/**/*"],
}
